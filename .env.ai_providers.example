# =============================================================================
# 通用AI配置
# =============================================================================
# 翻译批次大小 (每次翻译的字幕行数)
TRANSLATION_BATCH_SIZE=10

# 是否启用AI校对 (二次审核翻译质量)
ENABLE_TRANSLATION_PROOFREADING=true

# 翻译温度参数 (0.0-1.0, 越低越稳定)
TRANSLATION_TEMPERATURE=0.3

# 最大重试次数
AI_MAX_RETRIES=3

# 请求超时时间 (秒)
AI_REQUEST_TIMEOUT=300

# =============================================================================
# 成本控制
# =============================================================================
# 每月最大API成本 (USD)
MAX_MONTHLY_COST=50.0

# 单次翻译最大token数
MAX_TOKENS_PER_TRANSLATION=4096

# 是否启用成本预估
ENABLE_COST_ESTIMATION=true
